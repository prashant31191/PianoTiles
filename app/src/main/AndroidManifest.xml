<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.czp.pianotiles">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:supportsRtl="true"
        >
        <!--<activity android:namActGameTilevity">-->
        <activity android:name=".ActSplash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActWebPiano"
            android:screenOrientation="sensor"
            />
        <activity
            android:name=".ActGameTile"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.piano.ActPlayPiano"
            android:screenOrientation="sensor"
            />
        <activity android:name="com.piano.WebviewActivity"
            android:screenOrientation="portrait"/>




    </application>

</manifest>